{
  "name": "mysql-source-tennis",
  "config": {
    "connector.class": "io.debezium.connector.mysql.MySqlConnector",
    "tasks.max": "1",

    "database.hostname": "mysql",
    "database.port": "3306",
    "database.user": "debezium",
    "database.password": "dbz",

    "database.server.id": "184054",
    "topic.prefix": "mysql",

    "database.include.list": "tennis",
    "table.include.list": "tennis.players,tennis.tournaments,tennis.matches,tennis.match_results,tennis.player_rankings",

    "include.schema.changes": "false",
    "snapshot.mode": "initial",
    "tombstones.on.delete": "true",

    "schema.history.internal.kafka.bootstrap.servers": "kafka:9092",
    "schema.history.internal.kafka.topic": "schema-changes.tennis",

    "heartbeat.interval.ms": "5000"
  }
}
