{
  "name": "jdbc-sink-postgres-tennis",
  "config": {
    "connector.class": "io.debezium.connector.jdbc.JdbcSinkConnector",
    "tasks.max": "1",

    "topics.regex": "mysql\\.tennis\\.(players|tournaments|matches|match_results|player_rankings)",

    "connection.url": "jdbc:postgresql://postgres:5432/postgres?currentSchema=tennis",
    "connection.username": "postgres",
    "connection.password": "postgres",

    "insert.mode": "upsert",
    "delete.enabled": "true",
    "primary.key.mode": "record_key",

    "schema.evolution": "basic",

    "table.name.format": "${source.table}",

    "consumer.override.auto.offset.reset": "earliest"
  }
}
